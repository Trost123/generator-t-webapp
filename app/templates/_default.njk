<!doctype html>
<html<% if (includeModernizr) { %> class="no-js"<% } %> lang="">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1<% if (includeBootstrap && !legacyBootstrap) { %>, shrink-to-fit=no<% } %>">
    <title><%= appname %></title>

    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->

    <!-- build:css css/vendor.css -->
    <!-- bower:css -->
    <!-- endbower -->
    <!-- endbuild -->

    <!-- build:css css/main.css -->
    <link rel="stylesheet" href="css/main.css">
    <!-- endbuild -->
    <% if (includeModernizr) { %>
    <!-- build:js js/vendor/modernizr.js -->
    <script src="/bower_components/modernizr/modernizr.js"></script>
    <!-- endbuild --><% } %>
</head>
<body>
<!--[if IE]>
<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
<![endif]-->
<% if (includeBootstrap) { %>
<div class="container">
    <div class="header">
        <ul class="nav nav-pills <% if (legacyBootstrap) { %>pull<% } else { %>float<% } %>-right">
            <li class="<% if (legacyBootstrap) { %>active<% } else { %>nav-item<% } %>">
                <a <% if (!legacyBootstrap) { %>class="nav-link active" <% } %>href="#">Home</a>
            </li>
            <li>
                <a <% if (!legacyBootstrap) { %>class="nav-link" <% } %>href="#">About</a>
            </li>
            <li>
                <a <% if (!legacyBootstrap) { %>class="nav-link" <% } %>href="#">Contact</a>
            </li>
        </ul>
        <h3 class="text-muted"><%= appname %></h3>
    </div>

    <div class="jumbotron">
        <h1<% if (!legacyBootstrap) { %> class="display-3"<% } %>>'Allo, 'Allo!</h1>
        <p class="lead">Always a pleasure scaffolding your apps.</p>
        <p><a class="btn btn-lg btn-success" href="#">Splendid!</a></p>
    </div>

    <div class="row marketing">
        <div class="col-lg-6">
            <h4>HTML5 Boilerplate</h4>
            <p>HTML5 Boilerplate is a professional front-end template for building fast, robust, and adaptable web apps or sites.</p><% if (includeSass) { %>

            <h4>Sass</h4>
            <p>Sass is the most mature, stable, and powerful professional grade CSS extension language in the world.</p><% } %>

            <h4>Bootstrap</h4>
            <p>Sleek, intuitive, and powerful mobile first front-end framework for faster and easier web development.</p><% if (includeModernizr) { %>

            <h4>Modernizr</h4>
            <p>Modernizr is an open-source JavaScript library that helps you build the next generation of HTML5 and CSS3-powered websites.</p><% } %>
        </div>
    </div>

    <div class="footer">
        <p>â™¥ from the Yeoman team</p>
    </div>
</div>
<% } else { %>
<div class="content">
    {% include "templates/_header.njk" %}

    {% block content %}{% endblock %}

    {% include "templates/_footer.njk" %}
    {% include "templates/_popups.njk" %}
</div>
<% } %>

<!-- build:js js/vendor.js -->
<!-- bower:js -->
<!-- endbower -->
<!-- endbuild -->
<% if (includeBootstrap) { %>
<!-- build:js js/plugins.js -->
<% bsPlugins.forEach(function (plugin) { -%>
<script src="<%= bsPath + plugin %>.js"></script>
<% }) -%>
<!-- endbuild -->
<% } %>
<!-- build:js js/main.js -->
<script src="js/main.js"></script>
<!-- endbuild -->
</body>
</html>
